{
  "name": "sql-tables",
  "version": "0.102.2",
  "description": "Thin data access layer and schema generator for Postgres (and potentially other SQLs) that leverages RxJS streams and can generate TypeScript type defintions",
  "main": "index.js",
  "module": "dist/es6/index.js",
  "jsnext:main": "dist/es6/index.js",
  "typings": "dist/cjs/index.d.ts",
  "private": false,
  "scripts": {
    "prebuild": "yarn run test",
    "build": "yarn run tsc && yarn run tsc:es6",
    "clean": "yarn run clean:coverage && rimraf ./dist",
    "clean:coverage": "rimraf ./coverage",
    "lint": "tslint ./src/**/*.ts",
    "start": "node ./index.js",
    "pretest": "yarn run clean && yarn run lint",
    "test": "jest",
    "test:w": "jest --watch",
    "tsc": "tsc -p ./tsconfig.cjs.json",
    "tsc:es6": "tsc -p ./tsconfig.es6.json",
    "tsc:w": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bennett000/sql-tables.git"
  },
  "homepage": "https://github.com/bennett000/sql-tables.git",
  "keywords": [
    "sql",
    "database",
    "postgres",
    "schema",
    "dal",
    "rxjs",
    "reactive",
    "stream",
    "typescript"
  ],
  "author": "Michael J. Bennett",
  "license": "LGPL-3.0",
  "dependencies": {
    "chalk": "^2.3.2",
    "pg": "^6.1.2",
    "rxjs": "^5.0.3"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/node": "^7.0.0",
    "@types/pg": "^6.1.35",
    "cross-env": "^3.1.4",
    "jest": "^22.4.3",
    "rimraf": "^2.5.4",
    "ts-jest": "^22.4.2",
    "tslint": "^4.3.1",
    "typescript": "^2.8.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/*.d.ts",
      "!**/interfaces.ts"
    ],
    "coverageDirectory": "coverage/",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/dist/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
