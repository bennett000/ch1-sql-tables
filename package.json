{
  "name": "@ch1/sql-tables",
  "version": "1.0.0",
  "description": "Thin data access layer and schema generator for Postgres (and potentially other SQLs) that leverages RxJS streams and can generate TypeScript type defintions",
  "main": "index.js",
  "module": "dist/es6/index.js",
  "jsnext:main": "dist/es6/index.js",
  "types": "dist/cjs/index.d.ts",
  "private": false,
  "scripts": {
    "prebuild": "yarn run test",
    "build": "yarn run tsc && yarn run tsc:es6",
    "clean": "yarn run clean:coverage && rimraf ./dist",
    "clean:coverage": "rimraf ./coverage",
    "start": "node ./index.js",
    "pretest": "yarn run clean",
    "test": "jest",
    "test:w": "jest --watch",
    "tsc": "tsc -p ./tsconfig.cjs.json",
    "tsc:es6": "tsc -p ./tsconfig.es6.json",
    "tsc:w": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bennett000/ch1-sql-tables.git"
  },
  "homepage": "https://github.com/bennett000/ch1-sql-tables.git",
  "bugs": "https://github.com/bennett000/ch1-sql-tables.git/issues",
  "keywords": [
    "sql",
    "database",
    "postgres",
    "schema",
    "dal",
    "rxjs",
    "reactive",
    "stream",
    "typescript"
  ],
  "author": "Michael J. Bennett",
  "license": "LGPL-3.0",
  "dependencies": {
    "chalk": "^2.4.1",
    "pg": "^7.4.3",
    "rxjs": "^5.5.8"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.9.4",
    "@types/pg": "^7.4.10",
    "cross-env": "^5.2.0",
    "jest": "^23.5.0",
    "rimraf": "^2.5.4",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.3"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/*.d.ts",
      "!**/interfaces.ts"
    ],
    "coverageDirectory": "coverage/",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/dist/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
