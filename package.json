{
  "name": "sql-tables",
  "version": "0.99.0",
  "description": "Object mapper for SQL and TypeScript/JavaScript",
  "main": "index.js",
  "unpkg": "dist/umd/sql-tables.min.js",
  "module": "dist/es6/index.js",
  "jsnext:main": "dist/es6/index.js",
  "typings": "dist/cjs/index.d.ts",
  "private": false,
  "scripts": {
    "prebuild": "yarn run test",
    "build": "yarn run tsc && yarn run build:web",
    "prebuild:web": "yarn run tsc:es6",
    "build:web": "rollup -c",
    "postbuild:web": "google-closure-compiler-js dist/umd/sql-tables.js > dist/umd/sql-tables.min.js",
    "clean": "yarn run clean:coverage && rimraf ./dist",
    "clean:coverage": "rimraf ./coverage",
    "lint": "tslint ./src/**/*.ts",
    "prepublish": "yarn run build",
    "start": "node ./index.js",
    "pretest": "yarn run clean && yarn run lint",
    "test": "jest",
    "test:w": "jest --watch",
    "tsc": "tsc -p ./tsconfig.cjs.json",
    "tsc:es6": "tsc -p ./tsconfig.es6.json",
    "tsc:w": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git.michaeljbennett.info/srv/repo/michaeljbennett.info.git"
  },
  "keywords": [
    "jekyll",
    "static",
    "website",
    "michaeljbennett"
  ],
  "author": "Michael J. Bennett",
  "license": "LGPL-3.0",
  "dependencies": {
    "pg": "^6.1.2",
    "rxjs": "^5.0.3"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/node": "^7.0.0",
    "@types/pg": "^6.1.35",
    "chai": "^3.5.0",
    "concurrently": "^3.1.0",
    "cross-env": "^3.1.4",
    "google-closure-compiler-js": "^20180319.0.0",
    "istanbul": "^0.4.5",
    "jest": "^22.4.3",
    "mocha": "^3.2.0",
    "remap-istanbul": "^0.8.4",
    "rimraf": "^2.5.4",
    "rollup": "^0.57.1",
    "ts-jest": "^22.4.2",
    "tslint": "^4.3.1",
    "typescript": "^2.1.5"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/*.d.ts",
      "!**/interfaces.ts"
    ],
    "coverageDirectory": "coverage/",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/dist/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
